{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        "lib": ["dom", "es6", "dom.iterable"],
        "noImplicitAny": false,
        "rootDirs": ["src"],
        "typeRoots": ["node_modules/@types"],
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": true,
        "checkJs": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@rws/game/*": ["packages/game/*"],
            "@rws/library/*": ["packages/library/*"],
            "@rws/platform/*": ["packages/platform/*"],
            "@rws/platform-control-browser/*": ["packages/platform-control-browser/*"],
            "@rws/platform-control-glfw/*": ["packages/platform-control-glfw/*"],
            "@rws/platform-fs-browser/*": ["packages/platform-fs-browser/*"],
            "@rws/platform-fs-node/*": ["packages/platform-fs-node/*"],
            "@rws/platform-game-browser/*": ["packages/platform-game-browser/*"],
            "@rws/platform-game-native/*": ["packages/platform-game-native/*"],
            "@rws/platform-graphics-gles2/*": ["packages/platform-graphics-gles2/*"],
            "@rws/platform-graphics-three/*": ["packages/platform-graphics-three/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
